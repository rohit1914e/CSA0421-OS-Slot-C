#include <stdio.h>

int findOptimal(int pages[], int n, int frame[], int f, int index) {
    int pos = -1, far = index;
    for (int i = 0; i < f; i++) {
        int j;
        for (j = index; j < n; j++)
            if (frame[i] == pages[j]) {
                if (j > far) { far = j; pos = i; }
                break;
            }
        if (j == n) return i;  
    }
    return (pos == -1) ? 0 : pos;
}

int main() {
    int n, f, faults = 0;
    printf("Enter pages count: "); scanf("%d", &n);
    int pages[n];
    printf("Enter pages: "); for (int i = 0; i < n; i++) scanf("%d", &pages[i]);
    printf("Enter frame size: "); scanf("%d", &f);

    int frame[f]; for (int i = 0; i < f; i++) frame[i] = -1;

    for (int i = 0; i < n; i++) {
        int hit = 0;
        for (int j = 0; j < f; j++)
            if (frame[j] == pages[i]) hit = 1;

        if (!hit) {
            faults++;
            int pos = (i < f) ? i : findOptimal(pages, n, frame, f, i + 1);
            frame[pos] = pages[i];
        }

        printf("%d -> ", pages[i]);
        for (int k = 0; k < f; k++)
            printf("%d ", frame[k]);
        printf("\n");
    }

    printf("\nTotal Faults = %d\n", faults);
}

output :
Enter pages count: 4
Enter pages: 3 6 8 9 
Enter frame size: 2
3 -> 3 -1 
6 -> 3 6 
8 -> 8 6 
9 -> 9 6 

Total Faults = 4
