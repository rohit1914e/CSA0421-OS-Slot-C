#include <stdio.h>

int main() {
    int r[] = {40, 10, 50};
    int n = 3, head = 20, i, move = 0;

    for(i = 0; i < n; i++) {
        int d = head - r[i];
        if(d < 0) d = -d;
        move += d;
        head = r[i];
    }

    printf("Movement: %d\n", move);
    return 0;
}

OUTPUT
Movement: 90
