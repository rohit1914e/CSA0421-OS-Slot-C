#include <stdio.h>

int main() {
    int req[] = {30, 10, 70, 20};
    int n = 4, head = 40, end = 100;
    int i, j, temp, total = 0;

    // sort requests
    for(i = 0; i < n-1; i++)
        for(j = i+1; j < n; j++)
            if(req[i] > req[j]) {
                temp = req[i]; req[i] = req[j]; req[j] = temp;
            }

    // move right first
    for(i = 0; i < n; i++)
        if(req[i] >= head) {
            total += req[i] - head;
            head = req[i];
        }

    // go to end
    total += end - head;
    head = end;

    // now move left
    for(i = n-1; i >= 0; i--)
        if(req[i] < 40) {
            total += head - req[i];
            head = req[i];
        }

    printf("Total head movement: %d\n", total);
    return 0;
}
OUTPUT
Total head movement: 150
